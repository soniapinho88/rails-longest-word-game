<h1 class="newgame">New Game</h1>
<div class="letters">
<% @letters.each do | letter | %>
  <div class="button">
    <%= letter.capitalize %>
  </div>
<% end %>
</div>
<div class="question">
  <p>What is the longest word you can find?</p>
</div>
<div class="form">
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="play" class="box-play">
    <input type="submit" value="Play" class="button-form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
